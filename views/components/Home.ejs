<!-- Div bg  is wrapper div for navbar of class nav and home div -->
<div
  class="flex flex-col bg w[100%] h-[100vh] bg-gradient-to-b from-primary-main via-transparent to-primary-mid"
  id="bg"
>
  <!-- div for nav bar -->
  <div
    class="w-[100%] py-[20px] px-[10%] z-[4] duration-500 fixed top-0 flex flex-col md:flex-row justify-between gap-[20px] items-center bg-transparent"
    id="nav"
  >
    <!-- Div nav-img contain headding nav images  -->
    <div class="flex flex-row gap-[20px] items-center">
      <img src="/image/DEV_BLACK.png" class="w-[80px] object-contain" />
      <div class="w-[1px] h-[35px] bg-text-main"></div>
      <img src="/image/UI_BLACK.png" class="w-[55px] object-contain" />
    </div>
    <!-- Div nav-items contain links for scroll navigation -->
    <div class="flex flex-row md:gap-[50px] gap-[20px] items-center">
      <h4
        onclick="scrollDown('#home')"
        class="text-text-main font-r text-xs cursor-pointer"
      >
        Home
      </h4>
      <h4
        onclick="scrollDown('#about')"
        class="text-text-main font-r text-xs cursor-pointer"
      >
        About
      </h4>
      <h4
        onclick="scrollDown('#event')"
        class="text-text-main font-r text-xs cursor-pointer"
      >
        Events
      </h4>
      <h4
        onclick="scrollDown('#team')"
        class="text-text-main font-r text-xs cursor-pointer"
      >
        Team
      </h4>
      <h4
        onclick="scrollDown('#contact')"
        class="text-text-main font-r text-xs cursor-pointer"
      >
        Contact
      </h4>
    </div>
  </div>
  <!-- div for home section -->
  <div
    id="home"
    class="w-[100%] pt-[150px] pb-[50px] px-[10%] flex flex-col items-center justify-center z-[3]"
  >
    <img
      src="/image/UI_BLACK.png"
      class="lg:w-[400px] md:w-[300px] w-[200px] object-contain mt-[50px] mb-[20px] my-[auto]"
    />
    <h3 class="md:text-rg text-sm font-md text-text-main">"Leading Through Design"</h3>
    <button
      onclick="scrollDown('#contact')"
      class="px-[25px] py-[10px] mt-[10px] border-none cursor-pointer bg-secondary-light transition duration-500 text-primary-light  md:text-xxs text-xxxs font-medium rounded-md hover:bg-secondary-main"
    >
      Contact Us
    </button>
  </div>
</div>
